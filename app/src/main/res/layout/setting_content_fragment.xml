<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:baselineAligned="false">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/runBtn"
                android:background="@drawable/btn_style"
                android:id="@+id/startRecordData"
                android:layout_marginRight="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/stopBtn"
                android:background="@drawable/btn_style"
                android:id="@+id/stopRecordData"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:textColor="@color/cannotClick"/>

        </LinearLayout>
        <yxs.usst.edu.cn.project.custom_class.ChildClickableLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:id="@+id/allSettingContent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/settingBackColor"
                android:paddingBottom="20dp"
                android:paddingRight="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="恒温扩增"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通道选择"
                        android:textSize="18dp"
                        android:layout_marginRight="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAM通道"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="5dp">

                    <CheckBox
                        android:id="@+id/hexGraphChoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HEX通道"
                        android:textSize="18dp"
                        android:checked="true"/>
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恒温温度"
                    android:textSize="18dp"
                    android:layout_marginRight="16dp"/>
                    <CheckBox
                        android:id="@+id/defaultTemp"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="默认42℃" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="5dp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_style"
                        android:minWidth="50dp"
                        android:id="@+id/changeDefaultTemp"
                        android:text="42.0"
                        android:textSize="18dp"
                        android:digits="1234567890."
                        android:maxLength="4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="℃" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="恒温时间"
                        android:textSize="18dp"
                        android:layout_marginRight="16dp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_style"
                        android:minWidth="50dp"
                        android:id="@+id/keepTempTime"
                        android:text="60"
                        android:textSize="18dp"
                        android:digits="1234567890"
                        android:maxLength="3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="分钟" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:background="@color/settingBackColor"
                android:paddingRight="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginBottom="5dp">
                    <CheckBox
                        android:id="@+id/dissolutionGraph"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="溶解曲线" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起始温度"
                        android:textSize="18dp"
                        android:layout_marginRight="18dp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_style"
                        android:minWidth="50dp"
                        android:id="@+id/dissolutionTempNum"
                        android:text="42.0"
                        android:textSize="18dp"
                        android:digits="1234567890."
                        android:maxLength="4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="℃" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束温度"
                        android:textSize="18dp"
                        android:layout_marginRight="16dp"/>
                    <CheckBox
                        android:id="@+id/stopDissolutionTemp"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="默认80℃" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_style"
                        android:minWidth="50dp"
                        android:id="@+id/changeDefaultStopTemp"
                        android:text="80.0"
                        android:textSize="18dp"
                        android:digits="1234567890."
                        android:maxLength="4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="℃"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="度数误差"
                        android:textSize="18dp"
                        android:layout_marginRight="16dp"/>
                    <CheckBox
                        android:id="@+id/defaultCountTemp"
                        android:checked="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="默认1℃"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="0dp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_style"
                        android:minWidth="50dp"
                        android:id="@+id/changeDefaultCountTemp"
                        android:text="1"
                        android:textSize="18dp"
                        android:digits="123456789"
                        android:maxLength="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="℃"
                        />
                </LinearLayout>
            </LinearLayout>

        </yxs.usst.edu.cn.project.custom_class.ChildClickableLinearLayout>

</LinearLayout>